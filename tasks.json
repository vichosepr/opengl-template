{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build opengl",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Wall",
        "-Wextra",
        "-g3",

        "-Iinclude",

        "src/main.cpp",
        "src/glad.c",

        "-lglfw",
        "-lGL",
        "-ldl",

        "-o",
        "app"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
